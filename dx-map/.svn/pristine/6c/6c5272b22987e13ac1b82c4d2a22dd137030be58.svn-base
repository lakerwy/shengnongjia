/* css 样式控制组件的显示 */
.cesium-credit-logoContainer {
  display: none !important;
}

.cesium-viewer-cesiumInspectorContainer {
  right: 340px;
}

.cesium-widget-cesiumNavigationContainer #distanceLegendDiv .distance-legend {
  pointer-events: auto;
  border-radius: 15px;
  background-color: rgba(47, 53, 60, .8);
  padding-left: 5px;
  padding-right: 5px;
  border: 1px solid rgba(255, 255, 255, .1);
  box-sizing: content-box;
  left: 20px;
}

#cesium-viewer-footer {
  position: absolute;
  z-index: 998;
  left: 0;
  bottom: 0;
  font-size: 13px;
  color: #e9e9e9;
  text-shadow: 2px 2px 2px #000;
  background-color: rgba(47, 53, 60, .8);
  pointer-events: none;
  width: 100%;
  height: 25px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

#cesium-viewer-footer .cesium-position-label {
  margin-left: 20px;
}

#cesium-viewer-footer .cesium-position-label span{
  display: inline-block;
  width: 50px;
}

#cesium-viewer-footer .cesium-position-label span.long{
  width: 100px;
}